# Turso Cloud Database credentials
# Copy this file to secrets.toml and fill in your values.
# Get these by running:
#   turso db show --url veteran-businesses
#   turso db tokens create veteran-businesses

TURSO_CONNECTION_URL = "libsql://your-db-name.turso.io"
TURSO_AUTH_TOKEN = "your-token-here"

# Yelp Fusion API (for business star ratings)
# Get a free key at https://www.yelp.com/developers/v3/manage_app
YELP_API_KEY = "your-yelp-api-key-here"
